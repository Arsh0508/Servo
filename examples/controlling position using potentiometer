/*This code can be used to control the position of servo using a potentiometer or a variable resistor*/


#include <Servo.h>
   
Servo myservo;                            // create servo object to control a servo
int inputpin = 0;                         // analog pin used to connect the potentiometer
int x;                                    // variable to read the value from the analog pin

void setup()
{
    myservo.attach(9);                    // attaches the servo on pin 9 to the object
}

void loop()
{
    val = analogRead(inputpin);           // reads the value of the potentiometer (value between 0 and 1023)
    val = map(val, 0, 1023, 0, 180);      // scale the value to use it with the servo (value between 0 and 180)
    myservo.write(val);                   // sets the servo position according to the scaled value
    delay(15);
}
